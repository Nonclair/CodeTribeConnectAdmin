<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90616161" />
    <android.support.v7.widget.CardView
        android:id="@+id/profile_image_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="4dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/profile_setup_image"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:scaleType="centerCrop"
                android:src="@drawable/man_user_user"
                tools:ignore="ContentDescription"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/profile_image_edit_setup_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Edit"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/profile_image_save_setup_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Save"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>